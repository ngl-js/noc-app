{
  "exclude": ["node_modules", "dist"],
  "include": ["src/**/*"],
  // Visit https://aka.ms/tsconfig to read more about this file
  "compilerOptions": {
    // File Layout
    "rootDir": "src",
    "outDir": "dist/",

    // Environment Settings
    // See also https://aka.ms/tsconfig/module
    "module": "nodenext",
    "target": "esnext",
    // For nodejs:
    "lib": ["esnext"],
    "types": ["node"],
    // and npm install -D @types/node

    // Other Outputs
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    "esModuleInterop": true, // Helps with CommonJS module compatibility
    "allowImportingTsExtensions": true, // Allows importing .ts files directly
    "noEmit": true // Optional: ts-node doesn't need to emit files
  }
}
